# -*- makefile -*- vim:noet:ts=8:sw=4:ft=make:

######################################################################### MIPS3

#AC_MSG_RESULT(configuring for $PLATFORM)

DEF_PLATFORM            := IRIX

###################
#
#  File name elements (prefix & suffix)
#

S_OBJ                   := .o
S_EXE                   := 
P_LIB                   := lib
S_LIB                   := .a
S_DEP                   := .d
S_ASM                   := .s

###################
#
# Basic Options
#

O_DEF                   := -D
O_UNDEF                 := -U
_O_EXE                  := -o$S
_O_OBJ                  := -o$S
_O_LIB                  := -r$S
_L			:= -L

#############################
#
# Tool and flag-set definitions
#

ME_COMPILE              := CC
ME_COMPILE_C            := cc
ME_COMPILE_CXX          := CC
ME_ASSEMBLE             := as
ME_LIBRARY              := ar
ME_LINK			:= $(ME_COMPILE)

ME_DEPEND               := CC
ME_AS                   :=
ME_DVPASM               :=

ME_DEPENDFLAGS          := -M -DDEPENDENCY_PHASE

CPPFLAGS_RELEASE        := -DNDEBUG
CPPFLAGS_CHECK_RELEASE  := -D_MECHECK -DMCDCHECK
CPPFLAGS_DEBUG          := $(CPPFLAGS_CHECK_RELEASE) -D_DEBUG

CFLAGS_RELEASE          := -mips3 -O2
CFLAGS_DEBUG            := -mips3 -g3 -fullwarn

CXXFLAGS_RELEASE        := -mips3 -O2
CXXFLAGS_DEBUG          := -mips3 -g3 -fullwarn

ME_ASFLAGS_RELEASE      :=
ME_ASFLAGS_DEBUG        :=

ME_COMPILERPREFIX       :=

ME_CCLINKFLAGS_RELEASE  :=
ME_CCLINKFLAGS_DEBUG    :=

LDFLAGS                 := -rc

RM			:= rm -r -f
